{
    "name": "SpecSoloist Dev Container",
    "build": {
        "dockerfile": "../docker/specsoloist.Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliermarsh.ruff",
                "dbaeumer.vscode-eslint",
                "ms-vscode.vscode-typescript-next"
            ]
        }
    },
    "remoteUser": "root",
    "containerEnv": {
        "GEMINI_API_KEY": "${localEnv:GEMINI_API_KEY}",
        "ANTHROPIC_API_KEY": "${localEnv:ANTHROPIC_API_KEY}"
    }
}
